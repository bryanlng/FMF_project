<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DAE7EB"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/userNamePhoneNum"
            style="@style/MediumButtonFont"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="30dp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="#c9ffFF"
            android:textColor="#0000FF" >
        </TextView>

        <TextView
            android:id="@+id/dateString"
            style="@style/SmallButtonFont"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/userNamePhoneNum"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="#c9ffFF"
            android:textColor="#0000FF" >
        </TextView>

        <ProgressBar
            android:id="@+id/pBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/dateString"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="#c9ffFF"
            android:max="100" >
        </ProgressBar>

        <TextView
            android:id="@+id/pBarTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/pBar"
            android:layout_marginTop="5dip"
            android:background="@android:color/transparent"
            android:gravity="center" />

        <TextView
            android:id="@+id/gpsWifiStates"
            style="@style/SmallButtonFont"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/pBar"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="15dip"
            android:background="#c9ffFF"
            android:textColor="#0000FF" >
        </TextView>

        <Button
            android:id="@+id/commandButton"
            style="@style/SmallerFont"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_below="@id/pBar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="15dip"
            android:layout_toRightOf="@id/gpsWifiStates"
            android:background="@drawable/btn_green"
            android:text="@string/C_Command" />

        <TextView
            android:id="@+id/wifiConnection"
            style="@style/SmallButtonFont"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/gpsWifiStates"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="15dip"
            android:background="#c9ffFF"
            android:text="test"
            android:textColor="#0000FF" >
        </TextView>

        <Button
            android:id="@+id/location1Button"
            style="@style/SmallButtonFont"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/wifiConnection"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="5dip"              
            android:background="@drawable/btn_yellow"
            android:gravity="left|center_vertical"
            android:text="@string/C_Find" />

        <Button
            android:id="@+id/location2Button"
            style="@style/SmallButtonFont"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/location1Button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"            
            android:background="@drawable/btn_purple"
            android:gravity="left|center_vertical"
            android:text="@string/C_Find" />
    </RelativeLayout>

</ScrollView>